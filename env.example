# Environment Variables for Docker Compose
# Copy this file to .env and fill in your values

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# Comma-separated list of repositories to monitor (format: owner/repo)
# Example: REPOSITORIES=facebook/react,microsoft/vscode,nodejs/node
REPOSITORIES=

# Optional: Comma-separated list of team member GitHub usernames to filter PRs
# Leave empty to show all PRs from configured repositories
# Example: TEAM_MEMBERS=johndoe,janedoe,bobsmith
TEAM_MEMBERS=

# Client Port (default: 3000)
CLIENT_PORT=3000

